
@model SMS_Web_App_Version.Models.Student
<h2 class="mb-4">Delete Student</h2>
<h4 class="text-danger">Are you sure you want to delete this?</h4>
<div class="card shadow-sm">
    <div class="card-body">

        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Age</dt>
            <dd class="col-sm-9">@Model.Age</dd>

            <dt class="col-sm-3">EmailAddress</dt>
            <dd class="col-sm-9">@Model.EmailAddress</dd>

            <dt class="col-sm-3">Course</dt>
            <dd class="col-sm-9">@Model.Course</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-info text-white">Back to List</a>
        </form>

    </div>
</div>
